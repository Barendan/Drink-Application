
<div class="backSet">

	<div class="navBar">
		<b class="title">&nbsp;FireWater</b>
		<span class="underText">
		<%= @randomGreet %> <%= @user.first_name %>.
		</span>

		<div class="navRight">
			<a href="/users/<%= @current_user.id %>">
			    <button class="navLinks">
			     My Account
			    </button></a>&nbsp;&nbsp;&nbsp;

				<%= link_to(destroy_user_session_path, method: :delete) do %>
					<button class="navLinks">
						Logout
					</button>
				<% end %>		
		</div>
	</div>



	<div class="js-product closed">

		<div class="menu">
			<b class="biggie aboutStart"> Our Current Stock:</b><br><br>
			<table>
				<thead id="rowHover">
					<% @typeArr[0..5].each do |type| %>
					<tr> 
						<td id="typeClick"> <center> <%= type.name %> </center></td>
					</tr>
					<% end %>
				</thead>
			</table>

			<table class="productTable1 sortable" id="rowHover">
			    <thead>
			      <tr>
			        <th id="sortTable"> Product Name </th>
			        <th id="sortTable"> Quantity </th>
			        <th id="sortTable"> Price </th>
			      </tr>
			    </thead>

			    <tbody>
			      <% @productArr[0..9].each do |product| %>
			        <tr>
			          <td id="itemTable"> <%= product.name %> </td>
			          <td id="itemTable"> <center> - 1 + </center></td>
			          <td id="itemTable"> $<%= product.price %> </td>
			        </tr>
			      <% end %>
			    </tbody>
			</table>

			<table class="productTable2 sortable" id="rowHover">
			    <thead>
			      <tr>
			        <th id="sortTable"> Product Name </th>
			        <th id="sortTable"> Quantity </th>
			        <th id="sortTable"> Price </th>
			      </tr>
			    </thead>

			    <tbody>
			      <% @productArr[10..20].each do |product| %>
			        <tr>
			          <td id="itemTable"> <%= product.name %> </td>
			          <td id="itemTable"> <center> - 1 + </center></td>
			          <td id="itemTable"> $<%= product.price %> </td>
			        </tr>
			      <% end %>
			    </tbody>
			</table>

		</div>
	</div>



	<div class="js-mapOrder">

		<div class="showMap"> 
			<h2>Select a Driver in your area: </h2>
		    <!-- Google Maps Added -->
			<div id="map"></div>
	        	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDitmhzs3g-CuSVnFrUb19UarJA3ffKbJk">
        		</script>
	        		<script type ="text/javascript" src="http://www.geocodezip.com/scripts/v3_epoly.js">
        		</script>



		</div>
	</div>


	<div class="js-review closed">
		<p class="summary"> Your Order Summary:

			<form action="/users/<%= current_user.id %>/orders" method="POST">
			  <div>
			    <label for="address">Delivery Address</label>
			    <textarea name="order[address]" id="address"></textarea>
			  </div>

			  <div>
			    <label for="quantity">Quantity</label>
			    <input type="number" name="product_order[quantity]" id="quantity">
			  </div>

			   <input type='hidden' name="order[driver_id]" class="js-orderDriver">

			    <input type='hidden' name="product_order[product_id]" class="js-productID">

			  <input type='hidden' name='authenticity_token'
			      value='<%= form_authenticity_token %>'>

			  <button type="submit" class="navLinks">Place Your Order</button>

			</form>
		

		</p>
	</div>

</div>