<div class="userBase">

  <p id="notice"><%= notice %></p>

  <h1> User Database </h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @usersArr.each do |user| %>
        <tr>
          <td><a href="/users/<%= user.id %>"> 
            <%= user.first_name %> <%= user.last_name %> </a></td>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= link_to 'Show', user_path(user.id) %> </td>
          <td>&nbsp;&nbsp;</td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'Create a User', new_user_registration_path %><br>
  <%= link_to 'Back', home_path %>


</div>